{% style %}
  :root {
    /* Tertiary Button CSS Variables */
    --tertiary-button-background: {{ settings.tertiary_button_background | default: '#f8f9fa' }};
    --tertiary-button-text: {{ settings.tertiary_button_text | default: '#6c757d' }};
    --tertiary-button-border: {{ settings.tertiary_button_border | default: '#dee2e6' }};
    --tertiary-button-hover-background: {{ settings.tertiary_button_hover_background | default: '#e9ecef' }};
    --tertiary-button-hover-text: {{ settings.tertiary_button_hover_text | default: '#495057' }};
    --tertiary-button-hover-border: {{ settings.tertiary_button_hover_border | default: '#adb5bd' }};
    --tertiary-button-border-width: {{ settings.tertiary_button_border_width | default: 1 }}px;
    --tertiary-button-border-radius: {{ settings.button_border_radius_tertiary | default: 8 }}px;
    --tertiary-button-font-family: {{ settings.type_font_button_tertiary | default: 'var(--font-body--family)' }};
    --tertiary-button-font-weight: {{ settings.button_font_weight_tertiary | default: '500' }};
    --tertiary-button-text-case: {{ settings.button_text_case_tertiary | default: 'none' }};
    --tertiary-button-padding-top: {{ settings.tertiary_button_padding_top | default: 12 }}px;
    --tertiary-button-padding-bottom: {{ settings.tertiary_button_padding_bottom | default: 12 }}px;
    --tertiary-button-padding-left: {{ settings.tertiary_button_padding_left | default: 24 }}px;
    --tertiary-button-padding-right: {{ settings.tertiary_button_padding_right | default: 24 }}px;
    --tertiary-button-margin-top: {{ settings.tertiary_button_margin_top | default: 0 }}px;
    --tertiary-button-margin-bottom: {{ settings.tertiary_button_margin_bottom | default: 0 }}px;
    --tertiary-button-margin-left: {{ settings.tertiary_button_margin_left | default: 0 }}px;
    --tertiary-button-margin-right: {{ settings.tertiary_button_margin_right | default: 0 }}px;
  }

  /* Tertiary Button Base Styles */
  .button--tertiary,
  .button.button--tertiary,
  a.button--tertiary,
  button.button--tertiary,
  input[type="submit"].button--tertiary,
  input[type="button"].button--tertiary {
    background-color: var(--tertiary-button-background) !important;
    color: var(--tertiary-button-text) !important;
    border: var(--tertiary-button-border-width) solid var(--tertiary-button-border) !important;
    border-radius: var(--tertiary-button-border-radius) !important;
    font-family: var(--tertiary-button-font-family) !important;
    font-weight: var(--tertiary-button-font-weight) !important;
    text-transform: var(--tertiary-button-text-case) !important;
    padding-top: var(--tertiary-button-padding-top) !important;
    padding-bottom: var(--tertiary-button-padding-bottom) !important;
    padding-left: var(--tertiary-button-padding-left) !important;
    padding-right: var(--tertiary-button-padding-right) !important;
    margin-top: var(--tertiary-button-margin-top) !important;
    margin-bottom: var(--tertiary-button-margin-bottom) !important;
    margin-left: var(--tertiary-button-margin-left) !important;
    margin-right: var(--tertiary-button-margin-right) !important;
    text-decoration: none !important;
    display: inline-block !important;
    cursor: pointer !important;
    transition: all 0.3s ease !important;
    box-sizing: border-box !important;
  }

  /* Tertiary Button Hover States */
  .button--tertiary:hover,
  .button.button--tertiary:hover,
  a.button--tertiary:hover,
  button.button--tertiary:hover,
  input[type="submit"].button--tertiary:hover,
  input[type="button"].button--tertiary:hover {
    background-color: var(--tertiary-button-hover-background) !important;
    color: var(--tertiary-button-hover-text) !important;
    border-color: var(--tertiary-button-hover-border) !important;
    text-decoration: none !important;
  }

  /* Tertiary Button Focus States */
  .button--tertiary:focus,
  .button.button--tertiary:focus,
  a.button--tertiary:focus,
  button.button--tertiary:focus,
  input[type="submit"].button--tertiary:focus,
  input[type="button"].button--tertiary:focus {
    outline: 2px solid var(--tertiary-button-border) !important;
    outline-offset: 2px !important;
  }

  /* Tertiary Button Active States */
  .button--tertiary:active,
  .button.button--tertiary:active,
  a.button--tertiary:active,
  button.button--tertiary:active,
  input[type="submit"].button--tertiary:active,
  input[type="button"].button--tertiary:active {
    background-color: var(--tertiary-button-hover-background) !important;
    color: var(--tertiary-button-hover-text) !important;
    border-color: var(--tertiary-button-hover-border) !important;
    transform: translateY(1px) !important;
  }

  /* Tertiary Button Disabled States */
  .button--tertiary:disabled,
  .button.button--tertiary:disabled,
  a.button--tertiary:disabled,
  button.button--tertiary:disabled,
  input[type="submit"].button--tertiary:disabled,
  input[type="button"].button--tertiary:disabled {
    opacity: 0.6 !important;
    cursor: not-allowed !important;
    pointer-events: none !important;
  }

  /* Mobile Responsive Adjustments */
  @media (max-width: 768px) {
    .button--tertiary,
    .button.button--tertiary,
    a.button--tertiary,
    button.button--tertiary,
    input[type="submit"].button--tertiary,
    input[type="button"].button--tertiary {
      padding-top: calc(var(--tertiary-button-padding-top) * 0.9) !important;
      padding-bottom: calc(var(--tertiary-button-padding-bottom) * 0.9) !important;
      padding-left: calc(var(--tertiary-button-padding-left) * 0.9) !important;
      padding-right: calc(var(--tertiary-button-padding-right) * 0.9) !important;
    }
  }

  /* Small Screen Adjustments */
  @media (max-width: 480px) {
    .button--tertiary,
    .button.button--tertiary,
    a.button--tertiary,
    button.button--tertiary,
    input[type="submit"].button--tertiary,
    input[type="button"].button--tertiary {
      padding-top: calc(var(--tertiary-button-padding-top) * 0.8) !important;
      padding-bottom: calc(var(--tertiary-button-padding-bottom) * 0.8) !important;
      padding-left: calc(var(--tertiary-button-padding-left) * 0.8) !important;
      padding-right: calc(var(--tertiary-button-padding-right) * 0.8) !important;
    }
  }
{% endstyle %}
