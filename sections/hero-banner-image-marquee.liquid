{% comment %}
  Hero Banner Image Marquee Section
  Working version with proper tablet dimensions and marquee animations
{% endcomment %}

{% style %}
  .hero-banner-image-marquee {
    height: 70vh;
    min-height: 70vh;
    background-color: {{ section.settings.background_color | default: '#352118' }};
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    --page-margin: 16px;
  }

  @media screen and (min-width: 750px) {
    .hero-banner-image-marquee {
      --page-margin: 40px;
    }
  }
  
  .hero-banner-image-marquee__container {
    max-width: var(--page-width);
    width: 100%;
    height: 100%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    padding: 0 var(--page-margin);
    position: relative;
  }

  .hero-banner-image-marquee__content {
    width: 50%;
    padding: 4rem 2rem 4rem 0;
    color: {{ section.settings.text_color | default: '#ffffff' }};
    z-index: 2;
    box-sizing: border-box;
  }

  .hero-banner-image-marquee__actions {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 30px;
    margin-top: 2rem;
    width: 100%;
  }

  .hero-banner-image-marquee__title {
    font-size: {{ section.settings.title_font_size | default: 4.5 }}rem;
    font-weight: {{ section.settings.title_font_weight | default: 500 }};
    margin-bottom: 2rem;
    line-height: {{ section.settings.title_line_height | default: 100 }}%;
    color: #D4717B;
  }

  .hero-banner-image-marquee__description {
    font-size: {{ section.settings.description_font_size | default: 1.2 }}rem;
    font-weight: 400;
    margin-bottom: 3rem;
    line-height: {{ section.settings.description_line_height | default: 160 }}%;
    opacity: 0.9;
    color: {{ section.settings.text_color | default: '#ffffff' }};
  }

  .hero-banner-image-marquee__search-form {
    flex: 1;
    max-width: 600px;
  }

  .hero-banner-image-marquee__search-container {
    position: relative;
    width: 100%;
  }

  .hero-banner-image-marquee__search-input {
    width: 100%;
    padding: 16px 20px;
    border: 2px solid transparent;
    border-radius: 12px;
    font-size: 1rem;
    background: rgba(255, 255, 255, 0.15);
    color: {{ section.settings.text_color | default: '#ffffff' }};
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .hero-banner-image-marquee__search-input:focus {
    outline: none;
    border-color: {{ section.settings.button_background_color | default: '#ff6b9d' }};
    background: rgba(255, 255, 255, 0.25);
    transform: scale(1.02);
  }

  .hero-banner-image-marquee__search-input::placeholder {
    color: {{ section.settings.text_color | default: '#ffffff' }};
    opacity: 0.7;
  }

  .hero-banner-image-marquee__search-button {
    position: absolute;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: {{ section.settings.text_color | default: '#ffffff' }};
    cursor: pointer;
    padding: 8px;
    border-radius: 8px;
    transition: background-color 0.3s ease;
  }

  .hero-banner-image-marquee__search-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .hero-banner-image-marquee__search-icon {
    width: 20px;
    height: 20px;
  }

  .hero-banner-image-marquee__or-text {
    display: flex;
    align-items: center;
    color: {{ section.settings.text_color | default: '#ffffff' }};
    opacity: 0.8;
    font-size: 1rem;
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0 1rem;
    flex-shrink: 0;
  }

  .hero-banner-image-marquee__actions {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 30px;
    margin-top: 2rem;
    width: 100%;
    max-width: 600px;
  }

  .hero-banner-image-marquee__shop-button {
    background: {{ section.settings.button_background_color | default: '#ff6b9d' }};
    color: {{ section.settings.button_text_color | default: '#ffffff' }};
    border: none;
    padding: 16px 32px;
    border-radius: 12px;
    font-family: 'Poppins', sans-serif;
    font-size: 1.1rem;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(255, 107, 157, 0.3);
    flex-shrink: 0;
  }

  .hero-banner-image-marquee__shop-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(255, 107, 157, 0.4);
  }

  .hero-banner-image-marquee__images {
    width: 50%;
    height: 100%;
    overflow: visible;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .hero-banner-image-marquee__marquee-container {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 2rem 0;
    overflow: visible;
  }

  .hero-banner-image-marquee__marquee-track {
    display: flex;
    gap: clamp(8px, 1vw, 20px);
    height: 100%;
    align-items: flex-start;
    justify-content: flex-start;
    width: 100%;
  }



  .hero-banner-image-marquee__image-group {
    display: flex;
    flex-direction: column;
    gap: clamp(8px, 1vw, 20px);
    flex-shrink: 0;
    margin: 0;
    width: 50%;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-duration: {{ section.settings.animation_speed | default: 60 }}s;
    animation-play-state: running !important;
  }

  .hero-banner-image-marquee__image-wrapper {
    position: relative;
    width: 100%;
    height: calc(100% * 405 / 360);
    border-radius: {{ section.settings.image_radius | default: 32 }}px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    background: rgba(255, 255, 255, 0.1);
    flex-shrink: 0;
  }

  @media screen and (max-width: 768px) {
    .hero-banner-image-marquee__image-wrapper {
      width: 100% !important;
      min-width: 100% !important;
      max-width: 100% !important;
      height: 300px !important;
      min-height: 300px !important;
      max-height: 300px !important;
    }
    
    .hero-banner-image-marquee__image-group--left {
      animation: marqueeLeft {{ section.settings.animation_speed | default: 78 }}s linear infinite !important;
      animation-play-state: running !important;
    }
    
    .hero-banner-image-marquee__image-group--right {
      animation: marqueeRight {{ section.settings.animation_speed | default: 78 }}s linear infinite !important;
      animation-play-state: running !important;
    }
  }



  .hero-banner-image-marquee__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .hero-banner-image-marquee__image-placeholder {
    color: rgba(255, 255, 255, 0.6);
    font-family: 'Poppins', sans-serif;
    font-size: 14px;
    text-align: center;
    padding: 1rem;
  }

  .hero-banner-image-marquee__image-numbered-image {
    position: absolute;
    top: 12px;
    left: 12px;
    background: rgba(0, 0, 0, 0.8);
    color: white;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
    font-size: 12px;
    font-family: 'Poppins', sans-serif;
  }

  .hero-banner-image-marquee__image-group--left {
    animation: marqueeLeft {{ section.settings.animation_speed | default: 78 }}s linear infinite;
  }

  .hero-banner-image-marquee__image-group--right {
    animation: marqueeRight {{ section.settings.animation_speed | default: 78 }}s linear infinite;
  }
  
  /* Override vertical animations on tablet */
  @media screen and (min-width: 769px) and (max-width: 1024px) {
    .hero-banner-image-marquee__image-group--left {
      animation: none !important;
    }
    
    .hero-banner-image-marquee__image-group--right {
      animation: none !important;
    }
    
    /* Tablet horizontal marquee - 30% slower */
    .hero-banner-image-marquee__image-group--left {
      animation: tablet-ultra-slide-left 390s linear infinite !important;
      will-change: transform !important;
    }
    
    .hero-banner-image-marquee__image-group--right {
      animation: tablet-ultra-slide-right 390s linear infinite !important;
      will-change: transform !important;
    }
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @keyframes marqueeLeft {
    0% { transform: translateY(0); }
    100% { transform: translateY(-50%); }
  }

  @keyframes marqueeRight {
    0% { transform: translateY(-50%); }
    100% { transform: translateY(0); }
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .hero-banner-image-marquee__container {
      padding: 0 var(--page-margin);
    }
    
    .hero-banner-image-marquee__title {
      font-size: 3rem;
    }
  }

  @media (max-width: 768px) {
    .hero-banner-image-marquee {
      min-height: {{ section.settings.hero_height_mobile | default: 500 }}px;
      padding: 0;
    }

    .hero-banner-image-marquee__container {
      flex-direction: column;
      text-align: center;
      padding: 0 1rem;
    }

    .hero-banner-image-marquee__content {
      width: 80%;
      padding: 0;
      margin: 10% 0 0;
    }
    
    .hero-banner-image-marquee__or-text {
      display: none;
    }
    
    .hero-banner-image-marquee__actions {
      flex-direction: row-reverse;
    }
    
    .hero-banner-image-marquee__search-form {
      position: absolute;
      bottom: 5%;
      width: 75%;
    }
    
    .hero-banner-image-marquee__shop-button {
      width: 100%;
    }

    .hero-banner-image-marquee__title {
      font-size: 2.5rem;
    }

    .hero-banner-image-marquee__description {
      font-size: 1.1rem;
    }

    .hero-banner-image-marquee__images {
      margin-top: 0;
      position: absolute;
      opacity: 0.1;
      width: calc(100% - clamp(8px, 1vw, 20px) * 2);
      left: clamp(8px, 1vw, 20px);
      right: clamp(8px, 1vw, 20px);
    }
    
    .hero-banner-image-marquee__image-group {
      width: 49.4%;
    }

    .hero-banner-image-marquee__marquee-container {
      height: 100%;
      overflow: visible;
      position: relative;
    }

    .hero-banner-image-marquee__image-wrapper {
      width: 100% !important;
      min-width: 100% !important;
      max-width: 100% !important;
      height: 300px !important;
      min-height: 300px !important;
      max-height: 300px !important;
    }
    

  }

  @media (max-width: 480px) {
    .hero-banner-image-marquee__title {
      font-size: 2rem;
    }

    .hero-banner-image-marquee__description {
      font-size: 1rem;
    }

    .hero-banner-image-marquee__shop-button {
      padding: 14px 28px;
      font-size: 1rem;
    }

    .hero-banner-image-marquee__actions {
      flex-direction: column;
      gap: 1.5rem;
      align-items: stretch;
    }

    .hero-banner-image-marquee__search-form {
      max-width: none;
    }

    .hero-banner-image-marquee__or-text {
      text-align: center;
      padding: 0;
    }
  }

