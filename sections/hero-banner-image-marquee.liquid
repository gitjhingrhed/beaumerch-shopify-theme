      padding: 4rem 0 clamp(8px, 1vw, 20px) 0 !important;
      position: relative !important;
      min-height: {{ section.settings.hero_height_tablet | default: 800 }}px;
    }
    .hero-banner-image-marquee__container {
      flex-direction: column !important;
      padding: 0 !important;
      margin: 0 auto !important;
      max-width: var(--page-width) !important;
    }
    
    .hero-banner-image-marquee__content {
      width: 100% !important;
      text-align: left !important;
      padding: 0 var(--page-margin) !important;
      margin-bottom: clamp(8px, 1vw, 20px) !important;
    }
    
    .hero-banner-image-marquee__images {
      width: 100% !important;
      height: auto !important;
      min-height: 380px !important;
      position: absolute !important;
      bottom: 0 !important;
      left: 0 !important;
      right: 0 !important;
      margin: 0 !important;
      padding: 0 !important;
    }
    
    .hero-banner-image-marquee__marquee-track {
      display: flex !important;
      flex-direction: column !important;
      gap: clamp(8px, 1vw, 20px) !important;
      height: auto !important;
      margin: 0 !important;
      padding: 0 !important;
    }
    
    .hero-banner-image-marquee__image-group {
      flex-direction: row !important;
      gap: clamp(8px, 1vw, 20px) !important;
      width: auto !important;
      flex-shrink: 0 !important;
      overflow: visible !important;
      min-width: max-content !important;
    }
    
    .hero-banner-image-marquee__marquee-container {
      overflow: hidden !important;
      margin: 0 !important;
      padding: 0 !important;
      width: 100% !important;
    }
    
    .hero-banner-image-marquee__image-group--left,
    .hero-banner-image-marquee__image-group--right {
      margin: 0 !important;
      padding: 0 !important;
      gap: clamp(8px, 1vw, 20px) !important;
    }
    
    /* Horizontal marquee animations for tablet - Force override */
    .hero-banner-image-marquee__image-group--left {
      animation: tablet-marquee-right {{ section.settings.animation_speed | default: 30 }}s linear infinite !important;
      animation-play-state: running !important;
      animation-fill-mode: none !important;
      animation-delay: 0s !important;
      will-change: transform !important;
    }
    
    .hero-banner-image-marquee__image-group--right {
      animation: tablet-marquee-left {{ section.settings.animation_speed | default: 30 }}s linear infinite !important;
      animation-play-state: running !important;
      animation-fill-mode: none !important;
      animation-delay: 0s !important;
      will-change: transform !important;
    }
    
    /* CRITICAL: Set responsive image dimensions for tablets */
    .hero-banner-image-marquee__image-wrapper {
      flex-shrink: 0 !important;
      width: 260px !important;
      height: 190px !important;
      border-radius: 20px !important;
      overflow: hidden !important;
    }
    
    /* Ensure the actual images inside the wrapper also have the correct dimensions */
    .hero-banner-image-marquee__image-wrapper img {
      width: 100% !important;
      height: 100% !important;
      object-fit: cover !important;
      border-radius: 20px !important;
    }
    
    /* Critical: Ensure proper image duplication and seamless looping */
    .hero-banner-image-marquee__image-group {
      display: flex !important;
      flex-direction: row !important;
      flex-wrap: nowrap !important;
      width: max-content !important;
      white-space: nowrap !important;
      height: 190px !important;
      min-height: 190px !important;
      max-height: 190px !important;
      border-radius: 20px !important;
      animation-fill-mode: none !important;
      animation-iteration-count: infinite !important;
      animation-timing-function: linear !important;
      animation-play-state: running !important;
      /* Ensure content is wide enough for extended animation */
      min-width: 400vw !important;
    }
    
    /* Ensure seamless infinite loop for tablet horizontal marquee */
    .hero-banner-image-marquee__marquee-container {
      overflow: hidden !important;
      position: relative !important;
      width: 100% !important;
    }
    
    .hero-banner-image-marquee__marquee-track {
      display: flex !important;
      overflow: visible !important;
      white-space: nowrap !important;
      width: 200% !important;
    }
  }

     /* Ultra long animations with multiple cycles to minimize reset */
   @keyframes tablet-ultra-slide-left {
     0% {
       transform: translateX(0%);
     }
     11.11% {
       transform: translateX(-33.33%);
     }
     22.22% {
       transform: translateX(-66.66%);
     }
     33.33% {
       transform: translateX(-100%);
     }
     44.44% {
       transform: translateX(-133.33%);
     }
     55.55% {
       transform: translateX(-166.66%);
     }
     66.66% {
       transform: translateX(-200%);
     }
     77.77% {
       transform: translateX(-233.33%);
     }
     88.88% {
       transform: translateX(-266.66%);
     }
     100% {
       transform: translateX(-300%);
     }
   }

   @keyframes tablet-ultra-slide-right {
     0% {
       transform: translateX(-300%);
     }
     11.11% {
       transform: translateX(-266.66%);
     }
     22.22% {
       transform: translateX(-233.33%);
     }
     33.33% {
       transform: translateX(-200%);
     }
     44.44% {
       transform: translateX(-166.66%);
     }
     55.55% {
       transform: translateX(-133.33%);
     }
     66.66% {
       transform: translateX(-100%);
     }
     77.77% {
       transform: translateX(-66.66%);
     }
     88.88% {
       transform: translateX(-33.33%);
     }
     100% {
       transform: translateX(0%);
     }
   }
   
   /* Tablet-specific marquee keyframes - New names to avoid conflicts */
   @keyframes tablet-marquee-right {
     0% {
       transform: translateX(0);
     }
     100% {
       transform: translateX(-50%);
     }
   }

   @keyframes tablet-marquee-left {
     0% {
       transform: translateX(-50%);
     }
     100% {
       transform: translateX(0);
     }
   }
   
   /* Fallback keyframes for any conflicts */
   @keyframes marquee-right {
     0% {
       transform: translateX(0);
     }
     100% {
       transform: translateX(-50%);
     }
   }

   @keyframes marquee-left {
     0% {
       transform: translateX(-50%);
     }
     100% {
       transform: translateX(0);
     }
   }
{% endstyle %}

